<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" />
</head>
<body>
    <div id="root" class="container">
        <div className="row">
            <div className="col">
            </div>
            <div className="col-6">
                <div className="text-center">
                    <h1 class="text-center">REMO-ONE</h1>
                    <p class="text-center">Data Coming:</p>
                </div>
                @RenderBody()
            </div>
            <div className="col text-center">
                <form method="POST" style="width: 200px">
                    <input type="number" class="form-control" name="deviceId" />
                    <input type="submit" class="form-control" asp-page-handler="GetDataByDeviceNumber" value="Get data by device number" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>